{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
        "useSortedClasses": "error"
      }
		}
	},
	"files": {
		"ignore": [
			".next/*",
			"node_modules/*",
			".swc/*",
			".contentlayer/*",
			".vscode/*"
		]
	}
	
}
