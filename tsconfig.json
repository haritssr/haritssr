{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    // "noUnusedLocals":true,
    "target": "es5",
    "importHelpers": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/Icons": ["components/Icons"],
      "@/styles/*": ["styles/*"],
      "@/utils/*": ["utils/*"],
      "@content-collections": ["./.content-collections/generated"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/**/*.tsx",
    "tailwind.config.js",
    "data/ExperimentsData.ts",
    "pages/experiments/react/calculator.jsx",
    "pages/experiments/radix-ui/navigation-menu.tsx",
    "pages/experiments/react/useStateTodo.js",
    "utils/store-context-selector.js",
    "pages/experiments/react/store-context-selector.tes",
    "utils/store-context.js",
    "pages/experiments/react/store-context-selector.tsz",
    "pages/experiments/react/store-zustand.js",
    "styles/*.css",
    "styles/*.module.css",
    ".next/types/**/*.ts",
    ".content-collections/generated",
    "utils/getAllMDXFileInsideFolder.js",
    "utils/word-count.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
